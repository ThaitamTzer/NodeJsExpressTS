<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col card-spacing">
        <div class="col-lg-6 col-md-4">
          <div class="card" style="width: 18rem;">
            <a href="/courses/{{this.slug}}">
              <img
                src="{{this.image}}"
                class="card-img-top"
                alt="{{this.name}}"
              />
            </a>
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>